<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.willsea.dao.BottleDAO">

    <resultMap id="BaseResultMap" type="com.example.willsea.entity.Bottle">
        <id column="bid" jdbcType="INTEGER" property="bid"/>
        <result column="aid" jdbcType="INTEGER" property="aid"/>
        <result column="btime" jdbcType="INTEGER" property="time"/>
        <result column="btype" jdbcType="VARCHAR" property="type"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="private" jdbcType="VARCHAR" property="isPrivate"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.willsea.entity.Bottle" keyProperty="bid">
        insert into w_bottle(aid, btime, btype, title, content, private)
                VALUES (#{aid, jdbcType=INTEGER}, #{time, jdbcType=INTEGER},
                        #{type, jdbcType=VARCHAR}, #{title, jdbcType=VARCHAR},
                        #{content, jdbcType=VARCHAR}, #{isPrivate, jdbcType=VARCHAR}
                )
    </insert>

    <update id="updateState">
        UPDATE w_bottle
        SET private = "false"
    </update>

    <select id="queryById" parameterType="Integer" resultMap="BaseResultMap">
        SELECT *
        FROM w_bottle
        WHERE bid = #{bid}
    </select>

    <select id="queryAll" resultMap="BaseResultMap">
        SELECT *
        FROM w_bottle
        ORDER BY bid DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="queryByAuthor" resultMap="BaseResultMap">
        SELECT *
        FROM w_bottle
        WHERE aid = #{aid}
        ORDER BY bid DESC
        LIMIT #{offset}, #{limit}
    </select>

    <delete id="deleteById">
        DELETE FROM w_bottle
        WHERE bid = #{bid}
    </delete>
</mapper>